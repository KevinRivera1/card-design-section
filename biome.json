{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"ignore": ["node_modules/", "dist/", "tsconfig.json", "jsconfig.json"]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": true,
		"attributePosition": "auto",
		"indentStyle": "tab",
		"indentWidth":2,
		"lineWidth": 120,
    "lineEnding": "lf",
		"bracketSpacing":true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	},
	"javascript": {
		"formatter": {
      "arrowParentheses":"always",
      "bracketSameLine": false,
      "bracketSpacing": true,
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "semicolons": "always",
      "trailingCommas": "all"
    }
	}
}
